@model Enterwell_Faruk_Obradovic.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registracija korisnika";
}


<div class="row">
    <div class="col-md-4" style="margin:auto;">
        <form method="post">
            <h4>Kreirajte svoj račun.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.UserName"></label>
                <input asp-for="@Model.UserName" class="form-control" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Ime"></label>
                <input asp-for="@Model.Ime" class="form-control" />
                <span asp-validation-for="@Model.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Prezime"></label>
                <input asp-for="@Model.Prezime" class="form-control" />
                <span asp-validation-for="@Model.Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Grad"></label>
                <input asp-for="@Model.Grad" class="form-control" />
                <span asp-validation-for="@Model.Grad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Adresa"></label>
                <input asp-for="@Model.Adresa" class="form-control" />
                <span asp-validation-for="@Model.Adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BrojTelefona"></label>
                <input asp-for="@Model.BrojTelefona" class="form-control" />
                <span asp-validation-for="@Model.BrojTelefona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PW"></label>
                <input asp-for="@Model.PW" class="form-control" type="password"/>
                <span asp-validation-for="@Model.PW" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PW2"></label>
                <input asp-for="@Model.PW2" class="form-control" type="password"/>
                <span asp-validation-for="@Model.PW2" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Potvrdi</button>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


